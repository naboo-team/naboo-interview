{
  "name": "naboo-interview",
  "private": true,
  "version": "0.1.0",
  "description": "Naboo job interview",
  "scripts": {

    "format:all": "npm run format --workspaces --if-present",
    "lint:all": "npm run lint --workspaces --if-present",

    "format:front": "npm run format -w front-end",
    "format:back": "npm run format -w back-end",

    "lint:front": "npm run lint -w front-end",
    "lint:back": "npm run lint -w back-end",

    "start:front": "npm run start -w front-end",
    "start:back": "npm run start -w back-end",
    "start:back:prod" : "npm run start:prod -w back-end",

    "dev:front": "npm run dev -w front-end",
    "dev:back": "npm run start:dev -w back-end",

    "back:build": "npm run build -w back-end",
    "front:build": "npm run build -w front-end",

    "docker:start": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "docker:dev": "docker-compose up",
    
    "front:generate-types": "npm run generate-types -w front-end",
    "front:docker:generate-types": "npm run docker:generate-types -w front-end"
  },
  "author": "Stephane Thurneyssen",
  "workspaces": [
    "./back-end",
    "./front-end",
    "./core"
  ],
  "dependencies": {
    "graphql": "^16.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "typescript": "^5.1.6",
    "eslint": "^8.45.0",
    "prettier": "^2.8.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "tsconfig-paths": "^4.2.0",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.2",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1"
  }
}
